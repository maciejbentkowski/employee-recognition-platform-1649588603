<h2>My kudos</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th>Company_value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td><%= kudo.giver.email %></td>
        <td><%= kudo.receiver.email%></td>
        <td><%= kudo.company_value.title%></td>
        <td><%= link_to 'Show', kudo %></td>
        <td><%= link_to 'Edit', edit_kudo_path(kudo) %></td>
        <td><%= link_to 'Delete', kudo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>


  </tbody>
</table>

<h2>My rewards</h2>

<% @orders.each do |order| %>
  <td><%= order.employee.email %></td></br>
  <td><%= order.reward.title %></td>
  <td><%= order.points %></td></br>
  <td><%= order.created_at %></td></br>
<%end %>