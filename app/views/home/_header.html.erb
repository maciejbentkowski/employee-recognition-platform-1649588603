<div class = "header">
    <div class= "logo"><%=link_to "Employee App",root_path, class: "nav-logo" %></div>
    <div class= "menu">
    <% if employee_signed_in?%>
    <nav>Available kudos <%=current_employee.number_of_available_kudos%></nav>
    <nav>Hello <%=current_employee.email%></nav>>
    <nav>|<%=link_to "Sign Out",destroy_employee_session_path, :method => :delete, class: "nav-link" %>|</nav>
    <nav>|<%=link_to "My kudos",profile_path(current_employee.id), class: "nav-link" %>|</nav>
    <% elsif admin_signed_in?%>
    <nav>Hello <%=current_admin.email%></nav>
    <nav>|<%=link_to "Kudos", admins_kudos_path, class: "nav-link" %>|</nav>
    <nav>|<%=link_to "Employees", employees_path, class: "nav-link" %>|</nav>
    <nav>|<%=link_to "Company Values", admins_company_values_path, class: "nav-link"%>|</nav>
    <nav>|<%=link_to "Rewards",admins_rewards_path, class: "nav-link"%>|</nav>
    <nav>|<%=link_to "Dashboard",dashboard_path, class: "nav-link"%>|</nav>
    <nav>|<%=link_to "Sign Out",destroy_admin_session_path, :method => :delete, class: "nav-link" %>|</nav>
    <% else %>
    <nav>|<%=link_to "Sign In as Admin",new_admin_session_path, class: "nav-link" %>|</nav>
    <nav>|<%=link_to "Sign In",new_employee_session_path, class: "nav-link" %>|</nav>
    <nav>|<%=link_to "Sign Up",new_employee_registration_path, class: "nav-link" %>|</nav>
    <% end %>
    </div>
</div>