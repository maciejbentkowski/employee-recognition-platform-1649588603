<h1>Kudos</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Available kudos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.email%></td>
        <td><%= employee.number_of_available_kudos %></td>
          <td><%= link_to 'Edit', edit_employee_registration_path(employee) %></td>
          <td><%= link_to 'Destroy',admin_destroy_employee_path(employee) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
