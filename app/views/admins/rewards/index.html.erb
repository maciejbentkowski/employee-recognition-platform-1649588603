Rewards list :

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
     <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.title %></td>
        <td><%= reward.price %></td>
        <td><%= reward.description %></td>
          <td><%= link_to 'Edit', edit_admins_reward_path(reward)  %></td>
          <td><%= link_to 'Destroy',([:admins, reward]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Reward', new_admins_reward_path %>
