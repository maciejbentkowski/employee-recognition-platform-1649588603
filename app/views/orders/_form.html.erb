<%= form_with(model: order) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> Its prohibited to order this reward:</h2>

      <ul>
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div class="field">
    <%= form.label :employee_id %>
    <%= form.collection_select :employee_id, Employee.where(id: current_employee), :id, :email %>
  </div>

  <div class="field">
    <%= form.label :reward_id %>
    <%= form.collection_select :reward_id, Reward.all, :id, :title %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
